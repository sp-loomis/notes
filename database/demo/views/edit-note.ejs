<h2>Edit Note</h2>

<div class="card">
  <form action="/notes/<%= note.id %>" method="POST">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="<%= note.title %>" required>
    </div>
    
    <div>
      <label for="content">Content:</label>
      <textarea id="content" name="content" rows="10" required><%= note.content.plainText || '' %></textarea>
    </div>
    
    <div>
      <label for="tags">Tags:</label>
      <select id="tags" name="tags" multiple>
        <% tags.forEach(tag => { %>
          <option value="<%= tag.name %>" <%= note.tags.includes(tag.name) ? 'selected' : '' %>><%= tag.name %></option>
        <% }); %>
      </select>
      <small>Hold Ctrl (or Cmd on Mac) to select multiple tags</small>
    </div>
    
    <div class="actions">
      <button type="submit">Update Note</button>
      <a href="/notes/<%= note.id %>" class="button secondary">Cancel</a>
    </div>
  </form>
</div>